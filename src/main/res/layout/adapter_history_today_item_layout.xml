<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_adapter_history_today_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp">

    <ImageView
        android:id="@+id/id_iv_adapter_history_today_item_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_history_today_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/id_iv_adapter_history_today_item_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_adapter_history_today_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/id_tv_adapter_history_today_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="asdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdf"
                android:textSize="16sp" />

        <TextView
            android:id="@+id/id_tv_adapter_history_today_item_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="全文"
            android:textColor="@android:color/holo_orange_light" />
        <TextView
            android:id="@+id/id_tv_adapter_history_today_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>