<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/id_fl_fragment_navigation_item_container"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_tv_fragment_navigation_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/id_bt_fragment_navigation_item_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:background="@drawable/select_bt_navigation_item_bg"
        android:text="点击进入应用"
        android:textColor="#fff" />

</FrameLayout>