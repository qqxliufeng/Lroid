<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_rl_fragment_personal_info_face_container"
        style="@style/LroidRelativeStyle"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textSize="18sp" />

        <com.android.lf.lroid.v.views.RoundedImageView
            android:id="@+id/id_riv_fragment_personal_info_face"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_home_mine_default_face_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_fragment_personal_info_phone_container"
        style="@style/LroidRelativeStyle"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_tv_fragment_personal_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_fragment_personal_info_name_container"
        style="@style/LroidRelativeStyle"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_tv_fragment_personal_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_fragment_personal_info_nick_name_container"
        style="@style/LroidRelativeStyle"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_tv_fragment_personal_info_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_fragment_personal_info_sex_container"
        style="@style/LroidRelativeStyle"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_tv_fragment_personal_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_fragment_personal_info_personal_signature_container"
        style="@style/LroidRelativeStyle"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个性签名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_tv_fragment_personal_info_personal_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>